datasource db {
  // could be postgresql or mysql
  provider = "sqlite"
  url      = "file:bot.db"
}

generator db {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

model Records {
    // Showdown Username
    name String @id @unique

    // Total Wins
    wins Int @default(0)

    // Total Losses
    losses Int @default(0)

    // Current Win Streak
    winStreak Int @default(0)

    // Max Win Streak
    maxWinStreak Int @default(0)
}